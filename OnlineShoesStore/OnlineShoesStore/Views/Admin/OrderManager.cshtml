
@{
    ViewData["Title"] = "OrderManager";
    Layout = "_Admin";
}


<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Order Manager</h1>
                <nav class="d-flex align-items-center">
                    <a href="#">Admin<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Order Manager</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Tracking Box Area =================-->
<section class="tracking_box_area section_gap">
    <div class="container">
        <center>
            <h1 style="color:red;">Administrator - Order Manager</h1>
            @if (ViewBag.Announcement != null)
            {
                <script>
                    alert("@ViewBag.Announcement");
                </script>
            }
        </center>
        <div>
            <table id="test" class="display">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Payment Method</th>
                        <th>Total</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OrderDTO dto in ViewBag.Orders)
                    {
                        <tr>
                            <td>@dto.OrderId</td>
                            <td>@dto.Username</td>
                            <td>@dto.PaymentMethod</td>
                            <td>$ @dto.Total</td>
                            <td>@dto.DateCreated</td>
                            <td>@dto.Status</td>
                            <td><a href="/Admin/ProcessChangeOrderStatus?txtOrderID=@dto.OrderId&txtStatus=delivering" class="btn-warning btn-sm">Delivering</a></td>
                            <td><a href="/Admin/ProcessChangeOrderStatus?txtOrderID=@dto.OrderId&txtStatus=delivered" class="btn-success btn-sm">Delivered</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<!--================End Tracking Box Area =================-->
