
@{
    ViewData["Title"] = "BrandManager";
    Layout = "_Admin";
}


<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Brand Manager</h1>
                <nav class="d-flex align-items-center">
                    <a href="#">Admin<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Brand Manager</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Tracking Box Area =================-->
<section class="tracking_box_area section_gap">
    <div class="container">
        <center>
            <h1 style="color:red;">Administrator - Brand Manager</h1>
            @if (ViewBag.Announcement != null)
            {
                <script>
                    alert("@ViewBag.Announcement");
                </script>
            }
            <a class="primary-btn btn-lg" asp-controller="Admin" asp-action="AddBrand">Add new brand</a>
        </center>
        <div>
            <table id="test" class="display">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BrandDTO dto in ViewBag.Brand)
                    {
                        <tr>
                            <td>@dto.BrandId</td>
                            <td>@dto.Name</td>
                            <td><a href="/Admin/EditBrand?txtBrandID=@dto.BrandId" class="btn-success btn-sm">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<!--================End Tracking Box Area =================-->
